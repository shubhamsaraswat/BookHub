<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:orientation="vertical" app:cardCornerRadius="10dp" android:background="#ffffff" android:layout_margin="4dp" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="200dp" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:id="@+id/llFavContent" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="match_parent" android:weightSum="11">
        <ImageView android:id="@+id/imgFavBookImage" android:background="#f5f5f5" android:layout_height="0dp" android:layout_width="match_parent" android:src="@drawable/book_app_icon_web" android:scaleType="fitCenter" android:layout_weight="5"/>
        <TextView android:id="@+id/txtFavBookTitle" android:layout_margin="2dp" android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="1.5" android:textStyle="bold" android:textSize="16sp" android:textColor="#000000" android:textAllCaps="false" android:textAlignment="center" android:text="Hello World" android:padding="4dp"/>
        <View android:background="#f5f5f5" android:layout_height="1dp" android:layout_width="match_parent" android:layout_marginRight="4dp" android:layout_marginLeft="4dp"/>
        <TextView android:id="@+id/txtFavBookAuthor" android:layout_margin="2dp" android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="1.5" android:textSize="13sp" android:textAlignment="center" android:text="Android Inc." android:padding="4dp"/>
        <View android:background="#f5f5f5" android:layout_height="1dp" android:layout_width="match_parent" android:layout_marginRight="4dp" android:layout_marginLeft="4dp"/>
        <TextView android:id="@+id/txtFavBookPrice" android:layout_margin="2dp" android:layout_height="0dp" android:layout_width="match_parent" android:layout_weight="1.5" android:textStyle="bold" android:textSize="13sp" android:textColor="#357a38" android:textAlignment="center" android:text="Rs. 499" android:padding="4dp"/>
        <View android:background="#f5f5f5" android:layout_height="1dp" android:layout_width="match_parent" android:layout_marginRight="4dp" android:layout_marginLeft="4dp"/>
        <TextView android:id="@+id/txtFavBookRating" android:layout_margin="2dp" android:layout_height="0dp" android:layout_width="wrap_content" android:layout_weight="1.5" android:textStyle="bold" android:textSize="13sp" android:textColor="#ffca28" android:textAlignment="center" android:text="4.5" android:padding="4dp" android:drawablePadding="4dp" android:drawableLeft="@drawable/ic_rating" android:layout_gravity="center"/>
        <View android:background="#f5f5f5" android:layout_height="1dp" android:layout_width="match_parent" android:layout_marginRight="4dp" android:layout_marginLeft="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>